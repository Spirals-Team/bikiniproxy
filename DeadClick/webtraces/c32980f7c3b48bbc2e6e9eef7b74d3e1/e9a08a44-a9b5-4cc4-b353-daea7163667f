			<div class="mxb">
				<h1>
					Life inside the North Korean bubble
				</h1>
			</div>
		</td>
		</tr>
    		
		
	
                <tr>
                    <td class="storybody">
                        <!-- S BO --><p></p>
<!-- Inline Embbeded Media -->

<!--  This is the embedded player component -->

