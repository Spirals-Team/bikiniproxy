var $m = jQuery.noConflict();

$m(document).ready(function() {
	$m('.nav').setup_navigation();
}); 

var keyCodeMap = {
        48:"0", 49:"1", 50:"2", 51:"3", 52:"4", 53:"5", 54:"6", 55:"7", 56:"8", 57:"9", 59:";",
        65:"a", 66:"b", 67:"c", 68:"d", 69:"e", 70:"f", 71:"g", 72:"h", 73:"i", 74:"j", 75:"k", 76:"l",
        77:"m", 78:"n", 79:"o", 80:"p", 81:"q", 82:"r", 83:"s", 84:"t", 85:"u", 86:"v", 87:"w", 88:"x", 89:"y", 90:"z",
        96:"0", 97:"1", 98:"2", 99:"3", 100:"4", 101:"5", 102:"6", 103:"7", 104:"8", 105:"9"
}

$m.fn.setup_navigation = function(settings) {

	settings = jQuery.extend({
		menuHoverClass: 'show-menu',
	}, settings);
	
	// Add ARIA role to menubar and menu items
	$m(this).attr('role', 'menubar').find('li').attr('role', 'menuitem');
	
	var top_level_links = $m(this).find('> li > a');
	
	// Set tabIndex to -1 so that top_level_links can't receive focus until menu is open
	$m(top_level_links).next('ul')
		.stop(true, false)		
		.slideUp(300)		
		.attr('data-test','true')
		.attr({ 'aria-hidden': 'true', 'role': 'menu' })
		.find('a')
			.attr('tabIndex',-1);
	
	// Adding aria-haspopup for appropriate items
	$m(top_level_links).each(function(){
		if($m(this).next('ul').length > 0)
			$m(this).parent('li').attr('aria-haspopup', 'true');
	});
	
	$m(top_level_links).hover(function(){	
		$m(this).closest('ul')
		    .stop(true, false)
		    .slideDown(300)										
			.attr('aria-hidden', 'false')
			.find('.'+settings.menuHoverClass)
		        .stop(true, false)			
		        .slideUp(300)			 			 						
				.attr('aria-hidden', 'true')
				.removeClass(settings.menuHoverClass)
				.find('a')
					.attr('tabIndex',-1);
		$m(this).next('ul')
		    .stop(true, false)		
		    .slideDown(300)  // need this																				
			.attr('aria-hidden', 'false')
			.addClass(settings.menuHoverClass)
			.find('a').attr('tabIndex',0);	
	});
	$m(top_level_links).focus(function(){
		$m(this).closest('ul')
			.find('.'+settings.menuHoverClass)
		        .stop(true, false)				
		        .slideUp(300)												
				.attr('aria-hidden', 'true')		
				.removeClass(settings.menuHoverClass)
				.find('a')
				.attr('tabIndex',-1);
		$m(this).next('ul')	
		    .stop(true, false)		
		    .slideDown(300) // need this						
			.attr('aria-hidden', 'false')
			.addClass(settings.menuHoverClass)
			.find('a').attr('tabIndex',0);
	});
	
    $m('#mainnavmenu').mouseleave(function(){			    
		$m(this).closest('ul')										
			.attr('aria-hidden', 'false')
			.find('.'+settings.menuHoverClass)
		        .stop(true, true)		
		        .slideUp(200);			 
		 
	});	
	
	// Bind arrow keys for navigation
	$m(top_level_links).keydown(function(e){
		 if(e.keyCode == 37) {
			e.preventDefault();
			// This is the first item
			if($m(this).parent('li').prev('li').length == 0) {
				$m(this).parents('ul').find('> li').last().find('a').first().focus();
			} else {
				$m(this).parent('li').prev('li').find('a').first().focus();
			}
		} else if(e.keyCode == 38) {
			e.preventDefault();
			if($m(this).parent('li').find('ul').length > 0) {
				$m(this).parent('li').find('ul')								
					.attr('aria-hidden', 'false')
					.addClass(settings.menuHoverClass)
					.find('a').attr('tabIndex',0)
						.last().focus();
			}
		} else if(e.keyCode == 39) {
			e.preventDefault();
			// This is the last item
			if($m(this).parent('li').next('li').length == 0) {
				$m(this).parents('ul').find('> li').first().find('a').first().focus();
			} else {
				$m(this).parent('li').next('li').find('a').first().focus();
			}
		} else if(e.keyCode == 40) {
			e.preventDefault();
			if($m(this).parent('li').find('ul').length > 0) {
				$m(this).parent('li').find('ul')											
					.attr('aria-hidden', 'false')
					.addClass(settings.menuHoverClass)
					.find('a').attr('tabIndex',0)
						.first().focus();
			}
		} else if(e.keyCode == 13 || e.keyCode == 32) {
			// If submenu is hidden, open it
			// commented out gw:20151023 to allow enter key to launch links on main nav bar
			/* e.preventDefault();
			$m(this).parent('li').find('ul[aria-hidden=true]')								
					.attr('aria-hidden', 'false')
					.addClass(settings.menuHoverClass)
					.find('a').attr('tabIndex',0)
						.first().focus(); */
		} else if(e.keyCode == 27) {
			e.preventDefault();
			$m('.'+settings.menuHoverClass)				
				.attr('aria-hidden', 'true')
				.removeClass(settings.menuHoverClass)
				.find('a')
					.attr('tabIndex',-1);
		} else {
			$m(this).parent('li').find('ul[aria-hidden=false] a').each(function(){
				if($m(this).text().substring(0,1).toLowerCase() == keyCodeMap[e.keyCode]) {
					$m(this).focus();
					return false;
				}
			});
		} 
	});
	
	var links = $m(top_level_links).parent('li').find('ul').find('a');
	$m(links).keydown(function(e){
		 if(e.keyCode == 38) {
			e.preventDefault();
			// This is the first item
			if($m(this).parent('li').prev('li').length == 0) {
				$m(this).parents('ul').parents('li').find('a').first().focus();
			} else {
				$m(this).parent('li').prev('li').find('a').first().focus();
			}
		} else if(e.keyCode == 40) {
			e.preventDefault();
			if($m(this).parent('li').next('li').length == 0) {
				$m(this).parents('ul').parents('li').find('a').first().focus();
			} else {
				$m(this).parent('li').next('li').find('a').first().focus();
			}
		} else if(e.keyCode == 27 || e.keyCode == 37) {
			e.preventDefault();
			$m(this)
				.parents('ul').first()
					.prev('a').focus()
					.parents('ul').first().find('.'+settings.menuHoverClass)										
						.attr('aria-hidden', 'true')
						.removeClass(settings.menuHoverClass)
						.find('a')
							.attr('tabIndex',-1);
		} else if(e.keyCode == 32) {
			e.preventDefault();
			window.location = $m(this).attr('href');
		} else {
			var found = false;
			$m(this).parent('li').nextAll('li').find('a').each(function(){
				if($m(this).text().substring(0,1).toLowerCase() == keyCodeMap[e.keyCode]) {
					$m(this).focus();
					found = true;
					return false;
				}
			});
			
			if(!found) {
				$m(this).parent('li').prevAll('li').find('a').each(function(){
					if($m(this).text().substring(0,1).toLowerCase() == keyCodeMap[e.keyCode]) {
						$m(this).focus();
						return false;
					}
				});
			}
		}
	});

		
	// Hide menu if click or focus occurs outside of navigation
	$m(this).find('a').last().keydown(function(e){ 
		if(e.keyCode == 9) {
			// If the user tabs out of the navigation hide all menus
			$m('.'+settings.menuHoverClass)								
				.attr('aria-hidden', 'true')
				.removeClass(settings.menuHoverClass)
				.find('a')
					.attr('tabIndex',-1);
		}
	});
	$m(document).click(function(){ $m('.'+settings.menuHoverClass).attr('aria-hidden', 'true').removeClass(settings.menuHoverClass).find('a').attr('tabIndex',-1); });
	
	$m(this).click(function(e){
		e.stopPropagation();
	});
}