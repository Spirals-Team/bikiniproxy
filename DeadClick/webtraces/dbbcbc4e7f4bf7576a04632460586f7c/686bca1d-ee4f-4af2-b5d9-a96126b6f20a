  font-size: 1.462em;
  line-height: 1.895em;
  display: block;
  width: 100%;
  padding: 0;
  margin-bottom: 1.5em;
  border: none;
}

.fieldset-wrapper {
  border: 1px solid #ccc;
  padding: 10px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  -ms-border-radius: 3px;
  -o-border-radius: 3px;
  border-radius: 3px;
}

html.js fieldset.collapsed {
  /* When js is enabled */
  height: auto;
}

/*
